<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox style="-fx-font-family: 'Arial'; -fx-font-size: 14px;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hellomaven.view.AppController">

    <HBox alignment="TOP_CENTER">
        <TextField fx:id="tareaTextField" promptText="Nueva tarea" />
        <Button contentDisplay="CENTER" onAction="#agregarTarea" text="Agregar" />
    </HBox>

    <HBox alignment="TOP_CENTER">
        <Button fx:id="completarButton" contentDisplay="CENTER" onAction="#completarTarea" text="Completar" />
        <Button fx:id="eliminarButton" contentDisplay="CENTER" onAction="#eliminarTarea" text="Eliminar" />
    </HBox>

    <ListView fx:id="tareasListView" prefHeight="255.0" prefWidth="350.0" />
</VBox>
