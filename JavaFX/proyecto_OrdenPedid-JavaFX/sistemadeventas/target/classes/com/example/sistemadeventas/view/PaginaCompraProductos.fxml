<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistemadeventas.controllers.PaginaCompraProductosController">
    <top>
        <HBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-family: Arial; -fx-font-size: 13;" text="Categoría:" />
            <ComboBox fx:id="comboBoxCategorias" promptText="Seleccione una categoría" style="-fx-font-family: Arial; -fx-font-size: 13;" />
            <Button onAction="#handleLogout" style="-fx-font-family: Arial; -fx-font-size: 13;" text="Cerrar Sesión" />
        </HBox>
    </top>
    <center>
        <HBox alignment="CENTER">
            <TableView fx:id="tablaProductos" maxWidth="1.7976931348623157E308">
                <columns>
                    <TableColumn prefWidth="200" text="Nombre">
                        <cellValueFactory>
                            <PropertyValueFactory property="nombre" />
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn prefWidth="100" text="Precio">
                        <cellValueFactory>
                            <PropertyValueFactory property="precio" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="150" text="Categoría">
                        <cellValueFactory>
                            <PropertyValueFactory property="categoria.nombre" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </HBox>
    </center>
</BorderPane>
