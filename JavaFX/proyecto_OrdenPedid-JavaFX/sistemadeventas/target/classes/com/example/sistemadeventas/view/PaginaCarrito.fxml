<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistemadeventas.controllers.PaginaCarritoController">
    <top>
        <HBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-family: Arial; -fx-font-size: 13;" text="Categoría:" />
            <ComboBox fx:id="comboBoxCategorias" promptText="Seleccione una categoría" style="-fx-font-family: Arial; -fx-font-size: 13;" />
            <Button fx:id="btnComprar" onAction="#handleComprar" style="-fx-font-family: Arial; -fx-font-size: 13; -fx-background-color: lightblue;" text="Comprar" />
            <Button fx:id="btnGoBack" onAction="#handleGoBack" style="-fx-font-family: Arial; -fx-font-size: 13; -fx-background-color: lightgreen;" text="Ir atras" />
        </HBox>
    </top>
    <center>
        <AnchorPane>
            <TableView fx:id="tablaCarrito" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <TableColumn text="Producto" fx:id="nombreColumna">
                    <cellValueFactory>
                        <PropertyValueFactory property="nombre" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Precio" fx:id="precioColumna">
                    <cellValueFactory>
                        <PropertyValueFactory property="precio" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Cantidad" fx:id="cantidadColumna">
                    <cellValueFactory>
                        <PropertyValueFactory property="cantidad" />
                    </cellValueFactory>
                </TableColumn>
            </TableView>
        </AnchorPane>
    </center>
</BorderPane>
